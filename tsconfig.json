{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],           // Dodaj ovo
    "jsx": "react-jsx"     
  },
  "include": ["server.ts", "db/**/*.ts"],
  "exclude": ["node_modules", "client"]
}